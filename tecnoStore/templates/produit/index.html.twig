{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idproduit</th>
                <th>Designation</th>
                <th>Image</th>
                <th>Prixunitaire</th>
                <th>Prixvente</th>
                <th>Qtestock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.idproduit }}</td>
                <td>{{ produit.designation }}</td>
                <td>{{ produit.image }}</td>
                <td>{{ produit.prixunitaire }}</td>
                <td>{{ produit.prixvente }}</td>
                <td>{{ produit.qtestock }}</td>
                <td>
                    <a href="{{ path('produit_show', {'idproduit': produit.idproduit}) }}">show</a>
                    <a href="{{ path('produit_edit', {'idproduit': produit.idproduit}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun produit enregistr√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Ajouter</a>
{% endblock %}
